# Synctex

set synctex true
set synctex-editor-command "code -g %{input}:%{line}"

# Basic Settings

set font "Hack 12"
set highlight-transparency .4
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
set window-width 960
set window-height 1080
set sandbox none

map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map i recolor
map R rotate
map u scroll half-up
map d scroll half-down
map k 5k
map j 5k

include catppuccin-mocha
