#!/usr/bin/env bash

clock=$(date '+%I')

case "$clock" in
	"00") icon="ðŸ•›" ;;
	"01") icon="ðŸ•" ;;
	"02") icon="ðŸ•‘" ;;
	"03") icon="ðŸ•’" ;;
	"04") icon="ðŸ•“" ;;
	"05") icon="ðŸ•”" ;;
	"06") icon="ðŸ••" ;;
	"07") icon="ðŸ•–" ;;
	"08") icon="ðŸ•—" ;;
	"09") icon="ðŸ•˜" ;;
	"10") icon="ðŸ•™" ;;
	"11") icon="ðŸ•š" ;;
	"12") icon="ðŸ•›" ;;
esac

case "$BLOCK_BUTTON" in
    1) i3-msg 'exec gsimplecal' > /dev/null ;;
	2) dunstify "ðŸ“… Time/date module" "\- Left click to show upcoming appointments for the next three days via \`calcurse -d3\` and show the month via \`cal\`
- Middle click opens calcurse if installed" ;;
	#3) setsid -f $TERM -e calcurse ;;
	3) "$TERM" -e "$EDITOR" "$0" ;;
esac

date "+$icon %a, %d %B %H:%M:%S"
